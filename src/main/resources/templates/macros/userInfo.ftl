<#macro userInfo user>
    <h1> This is your User </h1>
    <h2> User id: ${user.id} </h2>
    <h2> User first name: ${user.firstName} </h2>
    <h2> User last name: ${user.lastName} </h2>
    <h2> User country: ${user.country} </h2>
    <h2> User city: ${user.city} </h2>
    <h2> User rating: ${user.rating} </h2>
    <h2> User login: ${user.login} </h2>
    <h2> User password: ${user.password} </h2>
    <h2> User created date: ${user.created} </h2>
</#macro>